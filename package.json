{
  "name": "@nuecms/wx-oa-sdk",
  "version": "0.1.2",
  "description": "A WeChat Official Account SDK for Node.js",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js"
    },
    "./dist/index.d.ts": {
      "import": "./dist/index.d.ts",
      "require": "./dist/index.d.ts"
    },
    "./src": {
      "import": "./src/index.ts"
    },
    "./src/index": {
      "import": "./src/index.ts"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "vite build",
    "dev": "vite",
    "lint": "eslint . --ext .ts",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "format": "prettier --write .",
    "prepare": "husky install",
    "clean": "rm -rf dist",
    "test:wx": "tsx watch tests/server/wechat.ts",
    "release": "release-it",
    "prepublishOnly": "npm run build",
    "npm:pub": "pnpm publish --access public"
  },
  "files": [
    "dist",
    "src"
  ],
  "keywords": [
    "wechat",
    "official-account",
    "sdk",
    "typescript",
    "node",
    "browser",
    "api-client",
    "cache",
    "transformers",
    "redis"
  ],
  "author": "Terry Cai <gidcai@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nuecms/wx-oa-sdk.git"
  },
  "bugs": {
    "url": "https://github.com/nuecms/wx-oa-sdk/issues"
  },
  "homepage": "https://github.com/nuecms/wx-oa-sdk#readme",
  "devDependencies": {
    "@types/node": "^22.10.1",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.1",
    "fast-xml-parser": "^4.5.0",
    "husky": "^9.1.7",
    "ioredis": "^5.4.1",
    "lint-staged": "^15.2.10",
    "prettier": "^3.4.2",
    "release-it": "^17.10.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vite": "^6.0.3",
    "vite-plugin-dts": "^4.3.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^2.1.8"
  },
  "dependencies": {
    "@nuecms/sdk-builder": "latest"
  },
  "engines": {
    "node": ">=18.0.0",
    "browsers": "last 2 versions, > 1%, not dead"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:import/recommended",
      "plugin:import/typescript",
      "plugin:prettier/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module"
    },
    "plugins": [
      "import",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error"
    }
  },
  "prettier": {
    "singleQuote": true,
    "semi": true,
    "trailingComma": "es5",
    "printWidth": 80
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "release-it": {
    "git": {
      "tagName": "v${version}",
      "commitMessage": "chore(release): v${version}",
      "requireCleanWorkingDir": true,
      "requireUpstream": false
    },
    "npm": {
      "publish": false
    }
  }
}
